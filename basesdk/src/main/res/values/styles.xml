<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@drawable/view_loading_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/color_black_363636</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    </style>

    <style name="DialogMessageTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/color_474747</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    </style>

    <style name="DialogButtonTextStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_7dba50</item>
        <item name="android:background">@drawable/selector_dialog_btn</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textColor">#007aff</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:background">#ffffff</item>
    </style>
</resources>