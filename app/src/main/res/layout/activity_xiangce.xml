<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <include layout="@layout/common_head_title1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/picRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_marginTop="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />

    <ViewStub
        android:id="@+id/bigPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/big_pic" />

    <ViewStub
        android:id="@+id/dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/delete_add_img_dialog" />

    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rect_6_white_gray_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="#3bc2ff"
        android:textSize="18sp" />


</RelativeLayout>