<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <xiaogao.zjut.tabbaishuo.views.CircleImageView
        android:id="@+id/headIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@mipmap/helo" />


    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/headIcon"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:hint="手机号/用户名"
        android:textColor="@color/register_black"
        android:textColorHint="@color/register_gray"
        android:textSize="@dimen/register_height" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@id/phone"
        android:layout_alignRight="@id/phone"
        android:layout_below="@id/phone"
        android:layout_marginTop="10dp"
        android:background="#f3f3f3" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/phone"
        android:layout_below="@id/line1"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:hint="密码"
        android:textColor="@color/register_black"
        android:textColorHint="@color/register_gray"
        android:textSize="@dimen/register_height" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@id/phone"
        android:layout_alignRight="@id/phone"
        android:layout_below="@id/password"
        android:layout_marginTop="10dp"
        android:background="#f3f3f3" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/line2"
        android:layout_below="@id/line2"
        android:layout_marginTop="5dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="注册账号"
        android:textColor="#3bc2ff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/line2"
        android:layout_below="@id/line2"
        android:layout_marginTop="5dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="忘记密码"
        android:textColor="#bababa"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgetPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rect_26_blue"
        android:gravity="center_horizontal"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18dp" />
</RelativeLayout>