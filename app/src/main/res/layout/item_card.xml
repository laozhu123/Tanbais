<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="405dp"
    android:background="@drawable/rect_white"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rect_white_redius_4_size_305"
            android:scaleType="fitCenter"
            android:src="@mipmap/helo" />

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:text="千千厥歌" />

        <ImageView
            android:id="@+id/vip"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_alignTop="@id/nickName"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/nickName"
            android:src="@mipmap/vip" />

        <TextView
            android:id="@+id/ageLocateWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="24岁·现在浙江杭州·演员" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sayS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:maxLines="2"
            android:maxWidth="150dp"
            android:textColor="@color/color_685868"
            android:textSize="14sp"
            tools:text="期望两年内结婚" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/piPD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_3bc2ff"
            android:textSize="14sp"
            tools:text="匹配度80%" />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:maxLines="2"
        android:textColor="#bbb"
        android:textSize="14sp"
        tools:text="我从8岁开始就学习表演" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>